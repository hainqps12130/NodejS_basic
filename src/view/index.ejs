<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Node JS Basic</title>
    <link rel="stylesheet" href="/css/style.css"/>
</head>
<body>
    <div class="topnav">
        <a class="active" href="#home">Home</a>
        <a href="#news">News</a>
        <a href="#contact">Contact</a>
        <a href="#about">About</a>
      </div>
   
    <!-- <%= dataUser %> -->
    <!-- <img src="/images/iconEmoji-removebg-preview.png"/> -->
    <h1>List User Table</h1>
    <table>
        <tbody>
        <tr>
            <th>ID</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Actions</th>
        </tr>
        
        <% for(let i=0; i < dataUser.length; i++) { %>
            <tr>
              <td><%= dataUser[i].id %></td>
              <td><%= dataUser[i].firstName %></td>
              <td><%= dataUser[i].lastName %></td>

              <div class="btn-user">
              <td>
                <a href="/detail/user/<%= dataUser[i].id %>" target="_blank">Detail</a>

                <form action="/edit-user/<%= dataUser[i].id %>" method="GET">
                  <button type="submit">Edit</button>
                </form>
              <form action="delete-user" method="POST">
                  <input type="text" hidden value="<%= dataUser[i].id %>" name="userId"/>
                  <button type="submit">Delete</button>
              </form>
              </td>
            </div>
            </tr>
         <% } %>
    </tbody>
       
      </table>

      <div class="create-user-container">
        <div> <b> Create a new user: </b> </div>
        <form action="/create-new-user" method="POST">
        <div>
          <label>First Name</label>
          <input type="text" name="firstName"/>
        </div>
        <div>
          <label>Last Name</label>
          <input type="text" name="lastName"/>
        </div>
        <div>
          <label>Email</label>
          <input type="email" name="email"/>
        </div>
        <div>
          <label>Address</label>
          <input type="text" name="address"/>
        </div>

        <div>
          <button class="btnSubmit" type="submit">Submit</button>
        </div>
      </form>
      </div>

     
      
</body>
</html>